{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5", 
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true, 
    "types": [
      "node"
    ],
    "lib": [
       "es2015", "es2017", "dom" 
    ],
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "wwwroot",
    "node_modules"
  ],
  "include": [
    "Scripts/**/*.ts"
  ],
  "files": [
    "webpack.config.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
